			"name": "Login",
			"item": [
				{
					"name": "Login - Valid Credentials",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has token and user\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('token');",
									"    pm.expect(jsonData).to.have.property('user');",
									"});",
									"",
									"pm.test(\"User has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.user).to.have.property('id');",
									"    pm.expect(jsonData.user).to.have.property('name');",
									"    pm.expect(jsonData.user).to.have.property('email');",
									"    pm.expect(jsonData.user).to.have.property('role');",
									"});",
									"",
									"pm.test(\"Token is a string\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.token).to.be.a('string');",
									"    pm.expect(jsonData.token.length).to.be.above(0);",
									"});",
									"",
									"pm.test(\"User does not have passwordHash\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.user).to.not.have.property('passwordHash');",
									"});",
									"",
									"// Save token and user_id for use in other requests",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.token);",
									"    pm.collectionVariables.set('user_id', jsonData.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
